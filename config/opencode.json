{
  "$schema": "https://opencode.ai/config.json",

  "model": "ollama/qwen2.5:7b",
  "small_model": "ollama/qwen2.5:3b",

  "disabled_providers": ["anthropic", "google", "amazon-bedrock", "azure"],

  "server": {
    "port": 4096,
    "hostname": "0.0.0.0",
    "mdns": true
  },

  "provider": {
    "openai": {
      "options": {
        "baseURL": "http://localhost:8000/v1"
      }
    }
  },

  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": { "enabled": true },
    "diff_style": "auto"
  },

  "tools": {
    "write": true, "edit": true, "bash": true, "read": true,
    "grep": true, "glob": true, "list": true, "lsp": true,
    "patch": true, "skill": true, "todowrite": true
  },

  "permission": { "edit": "ask", "bash": "ask" },
  "lsp": false,

  "mcp": {
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "enabled": true
    }
  },

  "autoupdate": false,
  "theme": "opencode"
}
